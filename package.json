{
  "name": "coderunner",
  "version": "1.0.0",
  "description": "A monorepo for a fullstack application",
  "scripts": {
    "dev:apps": "pnpm run --parallel -r dev",
    "dev:prettier": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}} --no-error-on-unmatched-pattern",
    "build": "pnpm run --parallel -r build",
    "dev": "npm-run-all --parallel dev:*",
    "format": "prettier --write .",
    "lint": "pnpm run --parallel -r lint"
  },
  "keywords": [
    "monorepo",
    "fullstack",
    "nextjs",
    "express",
    "typescript"
  ],
  "author": {
    "name": "Arvind A",
    "email": "pingarvindforquestions@gmail.com",
    "url": "https://arvind11.vercel.app",
    "github": "https://github.com/Arvind-4"
  },
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "4.1.5",
    "onchange": "7.1.0",
    "prettier": "3.2.5"
  }
}
